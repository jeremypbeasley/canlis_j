.canteen-nav li {
  opacity: .7;
  cursor: pointer;
}

.canteen-nav .active {
  opacity: 1;
  border-bottom: 3px solid white;
}

.color-green {
  color: green;
}

.color-white {
  color: white;
}

.color-creme {
  color: #f3e8bc;
}

.marquee {
  position: relative;
  width: 100vw;
  max-width: 100%;
  height: 100px;
  overflow-x: hidden;
  font-family: "Baskerville-SemiBoldItalic", "Times New Roman";
  font-weight: bold;
  color: green;
  background: transparent;
  font-size: 30px;
  margin-top: 20px;
  transform: rotate(5deg);
  z-index: 0000;
}

.track {
  position: absolute;
  white-space: nowrap;
  will-change: transform;
  animation: marquee 250s linear infinite;
}

@keyframes marquee {
  from { transform: translateX(0); }
  to { transform: translateX(-50%); }
}

.thebar-msg {
  width: 100%;
  span {
    border-bottom: 3px solid green;
  }
}

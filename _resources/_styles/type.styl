html
	font-size 14px
	font-family typeface-body, serif

body, p
	font-size 1rem
	
@media (min-width: 62em) {
  body, p {
    font-size: 1rem
  }
}

.Unselectable {
	-moz-user-select: none;
	-webkit-user-select: none;
	-ms-user-select: none;
}
p
	line-height 200%
	margin -.5em 0 1em 0
	text-align left
	cursor: default;
	padding-bottom: 1.2rem;
	
// i 
// 	font-family Feijoa-MediumItalic
	
a {
	text-decoration: none;
	border-bottom: 1px solid hsla(255,100%,100%,.2);
	border-bottom: 1px solid hsla(0,0%,0%,.2);
	color: color-text;
	padding-bottom: .1rem;
}
a:hover {
	border-color: hsla(0,0%,0%,1);
}
a.NoLine {
	border: none;
}
span {
	opacity: .5;
}
		
hr
	width 100%
	height 1px
	border none
	background black
	opacity .2
	margin 4vw 0
	
strong 
	font-weight normal

h1,h2,h3,h4,h5,h6 {
	margin 0;
	padding: 0;
	font-weight: normal;
	font-family: typeface-secondary;
	line-height 130%
	position relative
	z-index 9999
	cursor: default;
}

h1 {
	font-size: 2rem;
}
	
h3 {
	font-size: 1rem;
	opacity: .4;
}

ul, li {
	list-style: none;
	padding: 0;
	margin: 0;
}

li {
	margin-bottom: .8rem;
	//margin-left: -1.5rem;
}

// BUTTONS

.PrimaryCTA {
	font-size: .8rem;
	color: color-text;
	text-transform: uppercase;
	letter-spacing: .04rem;
	font-weight: bold;
	text-align: center;
	border: 1px solid color-text;
	border-radius: 3px;
	padding: .5rem 1rem;
	background: none;
	
}

// TYPE STYLES

.Display1 {
	font-size: 6vw;
	line-height: 125%;
	font-family: typeface-secondary;
}
.Display1 a, .Display1 i {
	font-family: typeface-secondary-italic;
}
.Display1 a {
	border-bottom: 1px solid color-gold;
}
.Display2 {
	font-size: 25px;
	line-height: 160%;
	font-family: typeface-primary;
}


.LabelText {
	font-size: .8rem
	text-transform: uppercase;
	letter-spacing: .04rem;
	font-weight: bold;
}
.Caption {
	font-size: .85rem
	text-transform: uppercase;
	letter-spacing: .04rem;
	font-family: typeface-tertiary;
}


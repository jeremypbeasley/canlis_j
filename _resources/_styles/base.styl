.LoadingShell {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100vh;
  background: color-background;
  z-index: 99999;
  animation: fade_out 1000ms 2000ms ease-out forwards, des_troy 1ms 3000ms ease-out forwards;
}
.logo_building {
  position: absolute;
  left: 50%;
  margin-left: -50px;
  margin-top: -50px;
  top: 50%;
  transform: translateY(-10) scale(2);
  opacity: 0;
  animation: fade_in 800ms ease-out forwards;
  animation-delay: 0ms;
}
@media laptop {
  .logo_building {
    left: 50%;
    transform: scale(2);
  }
}
.logo_building svg {
  overflow: visible;
}
.logo_building g {
  stroke: color-gold
}
#Stroke-1,
#Stroke-2,
#Stroke-3,
#Stroke-4,
#Stroke-5 {
  stroke-dasharray: 120;
  stroke-dashoffset: 120;
  animation: dash 5000ms cubic-bezier(0.165, 0.84, 0.44, 1) forwards;
  animation-iteration-count: 10;
}
@keyframes dash {
  to {
    stroke-dashoffset: 0;
  }
}
.HomeHeadline {
  transform: translateY(10px);
  opacity: 0;
  animation: fade_in 800ms ease-out forwards, move_up 800ms ease-out forwards;
  animation-delay: 3500ms;
}
@keyframes fade_in {
  to {
    opacity: 1;
  }
}
@keyframes fade_out {
  to {
    opacity: 0;
    transform: scale(1.05);
  }
}
@keyframes move_up {
  to {
    transform: translateY(0px);
  }
}
@keyframes des_troy {
  to {
    display: none;
    margin-left: 100000000px;
    left: 1000000px;
  }
}


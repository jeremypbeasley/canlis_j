.AlertBar {
  background: pink;
  position: fixed;
  top: 0;
  left: 0;
  padding: 13px 10px 10px 10px;
  width: 100%;
  text-align: center;
  z-index: 9999999;
}

.TockButton a {
  border: 1px solid color-tock-blue;
  background-color: color-tock-blue;
  padding: 12px 15px;
  border-radius: 4px;
  text-align: center;
  color: white;
  transition: all 200ms ease-out;
  font-family: typeface-tertiary;

}

.TockButton a::before {
  display: none;
}

.TockButtonSoldOut a {
  opacity: .5
}


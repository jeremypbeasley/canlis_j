.NavHamburger {
  position: absolute;
  height: 14px;
  background-repeat: no-repeat;
  background-position: top center;
  background-size: 100%;
  right: 0vw;
  top: 0vw;
  margin: 8vw 6.5vw;
  z-index: 100;
  width: 10em;
  cursor: pointer;
  &.Open {
    background-position: bottom center;
  }
  &.AlertOpen {
    top: 15vw;
  }
}
@media laptop {
  .NavHamburger {
    display: none;
  }
}
.NavHamburger div {
  position: absolute;
  text-align: right;
  float: right;
  width: 100%;
  cursor: pointer;
}
.NavHamburger div span {
  float: right;
  margin-right: -.25em;
}
.NavHamburger div span:after {
  content: "";
  display: block;
  height: 1px;
}
.NavHamburger div span.Open:after {
  background-color: color-brand-dark;
  width: 3.1em;
}
.NavHamburger div span.Close:after {
  background-color: color-brand-light;
  width: 4em;
}
.NavHamburger div:nth-child(1) {
  display: none;
}
.NavHamburger div:nth-child(0) {
  display: none;
}
.NavHamburger.Open div span {
  border-color: color-brand-light
  color: color-brand-light
}
.NavHamburger.Open div:nth-child(1) {
  display: inline;
}
.NavHamburger.Open div:nth-child(2) {
  display: none;
}
.Inverted.NavHamburger .Open {
  color: white;
}
.Inverted.NavHamburger div span.Open:after {
  background-color: white;
}
